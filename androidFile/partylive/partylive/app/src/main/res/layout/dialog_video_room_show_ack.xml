<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">
    <!--直播间用户信息弹框-->
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_white_suqare_coners"
        android:orientation="vertical"
        android:padding="40px">

        <ImageView
            android:id="@+id/dialog_show_ack_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:onClick="dissmissDialog"
            android:src="@mipmap/x" />

        <TextView
            android:id="@+id/dialog_show_ack_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="15px"
            android:paddingTop="25px"
            android:text="主播同意了您的点播"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/dialog_show_ack_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20px"
            android:background="@drawable/corner_red"
            android:onClick="dissmissDialog"
            android:paddingBottom="10px"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:paddingTop="10px"
            android:text="确定"
            android:textColor="@color/white" />

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoFrameLayout>

