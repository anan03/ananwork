<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">
    <!--直播间用户信息弹框-->
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_white_suqare_coners"
        android:orientation="vertical"
        android:padding="40px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="15px"
            android:paddingTop="25px"
            android:text="亲，给主播一个满意度反馈吧"
            android:textColor="@color/black" />

        <RadioGroup
            android:id="@+id/dialog_show_end_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/dialog_show_end_radio_y"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_margin="20px"
                android:layout_weight="1"
                android:background="@drawable/selector_room_show_end"
                android:button="@color/gray"
                android:checked="true"
                android:gravity="center"
                android:padding="10px"
                android:text="满意"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/dialog_show_end_radio_n"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_margin="20px"
                android:layout_weight="1"
                android:background="@drawable/selector_room_show_end"
                android:button="@color/gray"
                android:gravity="center"
                android:padding="10px"
                android:text="不满意"
                android:textColor="@color/white" />
        </RadioGroup>

        <TextView
            android:id="@+id/dialog_show_end_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20px"
            android:background="@drawable/corner_red"
            android:onClick="dissmissDialog"
            android:paddingBottom="10px"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:paddingTop="10px"
            android:text="确定"
            android:textColor="@color/white" />

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoFrameLayout>

