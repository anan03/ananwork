<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/dialog_self_bg_apply"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/dialog_prompt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="提示"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/dialog_prompt_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="请输入密码"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/join_secret_pwd_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:background="@drawable/corner_pwd_edit"
        android:hint="请输入密码"
        android:padding="15px"
        android:singleLine="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20px"
        android:background="#c2c2c2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="0dp">

        <TextView
            android:id="@+id/join_secret_pwd_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="30px"
            android:text="取消"
            android:textColor="@color/secret_blue" />

        <TextView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#c2c2c2" />

        <TextView
            android:id="@+id/join_secret_pwd_sure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="30px"
            android:text="确定"
            android:textColor="@color/secret_blue" />
    </LinearLayout>


</LinearLayout>
