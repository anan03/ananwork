<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/register_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/all_layout"
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:background="@color/backgeragd_head"
        android:gravity="center"
        android:orientation="vertical">

        <com.lvshandian.partylive.widget.AvatarView
            android:id="@+id/choise_user_head"
            android:layout_width="130px"
            android:layout_height="130px"
            android:src="@mipmap/app_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:text="点击上传头像"
            android:textColor="@color/white"
            android:textSize="28px" />

    </com.zhy.autolayout.AutoLinearLayout>
    <!-- 登录输入框开头 -->
    <com.zhy.autolayout.AutoLinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:background="@android:color/white"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginRight="19px"
                android:text="昵称"
                android:textColor="@color/tv_color"
                android:textSize="28px" />

            <EditText
                android:id="@+id/ed_register_nick"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:background="@color/white"
                android:hint="@string/please_input_nick"
                android:inputType="text"
                android:maxLength="10"
                android:maxLines="1"
                android:textSize="26px" />

        </com.zhy.autolayout.AutoLinearLayout>


        <TextView

            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"></TextView>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginRight="19px"
                android:text="性别"
                android:textColor="@color/tv_color"
                android:textSize="28px" />

            <TextView
                android:id="@+id/ed_register_gender"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:inputType="text"
                android:maxLength="1"
                android:maxLines="1"
                android:textSize="26px" />


        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"></TextView>


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginRight="19px"
                android:text="视频私聊费用"
                android:textColor="@color/tv_color"
                android:textSize="28px" />

            <EditText
                android:id="@+id/ed_register_private_costs"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:background="@color/white"
                android:hint="请输入支付金币数"
                android:inputType="number"
                android:maxLines="1"
                android:textSize="26px" />

        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"></TextView>


    </com.zhy.autolayout.AutoLinearLayout>
    <!-- 登录输入框结尾 -->

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="20px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginRight="19px"
            android:text="签名"
            android:textColor="@color/tv_color"
            android:textSize="28px" />

        <EditText
            android:id="@+id/ed_register_signature"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/white"
            android:hint="请输入签名"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="26px" />

    </com.zhy.autolayout.AutoLinearLayout>


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <!-- 保存按钮开始 -->

        <Button
            android:id="@+id/btn_change_user"
            android:layout_width="500px"

            android:layout_height="80px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_marginTop="20px"
            android:background="@drawable/selector_loginbtn"

            android:text="@string/save"
            android:textColor="@android:color/white"
            android:textSize="30px" />
        <!-- 保存按钮结束 -->

    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>


