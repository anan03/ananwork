<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical">

    <TextView
        android:id="@+id/nim_message_item_text_body_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="phone|email|web"
        android:gravity="center_vertical|left"
        android:includeFontPadding="false"
        android:lineSpacingExtra="3dip"
        android:maxWidth="@dimen/max_text_bubble_width"
        android:text="进入房间"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />
    <!--android:textColor="@color/color_black_b3000000"-->
    <TextView
        android:id="@+id/nim_message_item_light_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="phone|email|web"
        android:gravity="center_vertical|left"
        android:includeFontPadding="false"
        android:lineSpacingExtra="3dip"
        android:maxWidth="@dimen/max_text_bubble_width"
        android:text="♥"
        android:textColor="@color/color_red_ccfa3c55"
        android:textSize="14sp"
        android:visibility="gone" />
</LinearLayout>